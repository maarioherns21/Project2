<!doctype html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title>Cover</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    <link href="cover.css" rel="stylesheet">
  </head>
  <body class="d-flex h-100 text-center text-white bg-dark">
    
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header class="mb-auto">
    <div>
      <h3 class="float-md-start mb-0">RECIPE FIESTA</h3>
      <nav class="nav nav-masthead justify-content-center float-md-end">
        <a class="nav-link active" href="http://localhost:3000/mains">HOME</a>
        <% if (user) { %>
            <a class="nav-link active" aria-current="page" href="/recipes/new" <%- title === 'Add Recipe' ? 'class="active"' : '' %>>ADD RECIPE</a>
            <a class="nav-link active" aria-current="page" href="/logout">LOG OUT</a> 
            <% } else { %>
            <a class="nav-link active" aria-current="page" href="/auth/google">LOG IN&nbsp;</a>
              <% } %>   
      </nav>
    </div>
  </header>
  <hr class="featurette-divider">
  <main>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% recipes.forEach(function(r) { %>
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= r.img %></text></svg>

            <div class="card-body">
              <p class="card-text" id="mainbtn"><%= r.recipeName %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a href="/recipes/<%= r._id %>"><button type="button" class="btn btn-sm btn-outline-secondary" id="mainbtn">Details</button></a>
                  <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
                </div>
                <small class="text-muted" ><%= r.prepTime %></small>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </main>
<br>
  <footer class="mt-auto text-white-50">
    <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>
  </footer>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>