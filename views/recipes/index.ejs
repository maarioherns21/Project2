<!doctype html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="generator" content="Hugo 0.88.1">
    <title>Recipes</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    <link href="cover.css" rel="stylesheet">
  </head>
  <body class="d-flex h-100 text-center text-#555555 bg-white">
    
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header class="mb-auto">
    <div>
      <h3 class="float-md-start mb-0">RECIPE FIESTA</h3>
      <nav class="nav nav-masthead justify-content-center float-md-end">
        <a class="nav-link active" href="/mains">HOME</a>
        <a class="nav-link active" href="/recipes/images">ABOUT</a>
        <% if (user) { %>
            <a class="nav-link active" aria-current="page" href="/recipes/new" <%- title === 'Add Recipe' ? 'class="active"' : '' %>>ADD RECIPE</a>
            <a class="nav-link active" aria-current="page" href="/logout">LOG OUT</a> 
            <% } else { %>
            <a class="nav-link active" aria-current="page" href="/auth/google">LOG IN&nbsp;</a>
              <% } %>   
      </nav>
    </div>
  </header>
  <main class="px-4">
    <br><br>
      <h1 class="featurette-heading">ALL RECIPES</h1>
      <br><br><br>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% recipes.forEach(function(r) { %>
        <div class="col">
          <div class="card shadow-sm container_foto">
              <div class="container_foto">
            <img
            src="https://img-aws.ehowcdn.com/400x400/ds-img.studiod.com/Half_Dome_from_Glacier_Point0_1.jpg"
            alt=""
          />
          </div>
            <div class="card-body">
                <h1 class="featurette-heading card-text"><%= r.recipeName %></h1>
                <h5><%= r.recipeInfo %></h5>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/recipes/<%= r._id %>"><button type="button" class="button">Details</button></a>
                </div>
                <small class="text-muted" ><%= r.prepTime %></small>
              </div>
            </div>
          </div>
        </div>
        <% }); %>  
    </div>
    <br>
    <br>
  </main>

    <br>
    <br>
    <br>
  <footer class="mt-auto text-white-50">
    <p class="text-black">Copyright<a>Â©</a>
  </footer>
</div>
